% pyramide des nombres {{{3
% pour créer la pyramide (#1 est le nombre de cases en bas)
\newcommand{\pyramidedenombres}[1]{
 \pgfmathparse{#1-1};
 \edef\yy{\pgfmathresult};
 \foreach \y in {0,1,...,\yy}{
 \pgfmathparse{\yy-\y};
 \edef\xx{\pgfmathresult};
 \foreach \x in {0,...,\xx}{
 \draw (\x+0.5*\y,1+\y) rectangle (\x+1+0.5*\y,0+\y);
 }
 };
}
% pour placer dans la pyramide a l'étage #1 dans la case #2 le nombre #3
\newcommand{\pyramideplacernombre}[3]{
 \pgfmathparse{0.5*#1+#2-1};
 \edef\xx{\pgfmathresult};
 \pgfmathparse{#1-0.5};
 \edef\yy{\pgfmathresult};
 \draw (\xx,\yy) node {$#3$};
}
